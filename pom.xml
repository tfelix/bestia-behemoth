<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.bestia</groupId>
	<artifactId>behemoth</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>bestia</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<!-- Profiles for the different builds. -->
	<profiles>
		<profile>
			<id>development</id>
			<properties>
				<environment>dev</environment>
				<db.username>sa</db.username>
				<db.password></db.password>
				<db.url>jdbc:h2:mem:</db.url>
				<db.dialect>org.hibernate.dialect.H2Dialect</db.dialect>
				<db.driver>org.h2.Driver</db.driver>
			</properties>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>environment</name>
					<value>dev</value>
				</property>
			</activation>
		</profile>
		<profile>
			<id>production</id>
			<properties>
				<environment>prod</environment>
				<db.username>myProdUser</db.username>
				<db.password>secretProdPasswd</db.password>
				<db.url>jdbc:mysql://production-database/myDb</db.url>
				<db.dialect>org.hibernate.dialect.MySQL5Dialect</db.dialect>
				<db.driver>com.mysql.jdbc.Driver</db.driver>
			</properties>
			<activation>
				<property>
					<name>environment</name>
					<value>prod</value>
				</property>
			</activation>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<!-- http://maven.apache.org/plugins/maven-compiler-plugin/ -->
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>bestia-core</module>
		<module>bestia-webserver</module>
		<module>map-tmxloader</module>
	</modules>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>2.0-beta9</version>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-api</artifactId>
			<version>2.0-beta9</version>
		</dependency>
	</dependencies>
	<organization>
		<name>tfelix Software</name>
		<url>http://www.tfelix.de</url>
	</organization>
</project>
