{
  "name": "bestia-behemoth-web_alpha",
  "description": "Frontend of Bestia - Browsergame.",
  "author": "Thomas Felix (http://www.tfelix.de)",
  "version": "0.4.0",
  "jsnext:main": "build/bundle.js",
  "private": true,
  "scripts": {
    "clean": "rimraf build/*",
    "mkdir": "mkdirp ./build/css ./build/js",
    "server": "lite-server --baseDir=\"build\"",
    "build:html": "cpx ./src/**/*.{html,png,jpg} ./build -v",
    "build:assets": "cpx \"./../game-data/**/*\" ./build/assets -v",
    "build:css": "lessc ./src/css/game/main.less --source-map-map-inline | cssmin > ./build/css/game.css",
    "build:css:watch": "watch \"npm run build:css\" ./src/css",
    "build:js": "rollup -c",
    "prebuild:watch": "npm run mkdir",
    "build:watch": "parallelshell \"npm run build:html -- -w\" \"npm run build:assets -- -w\" \"npm run build:css:watch\" \"npm run build:js -- --watch\" \"npm run server\""
  },
  "dependencies": {
    "i18next": "7.1.0",
    "js-cookie": "2.1.3",
    "knockout": "3.4.2",
    "loglevel": "1.4.1",
    "nanoscroller": "0.8.7",
    "phaser": "2.6.2",
    "phaser-state-transition-plugin": "0.1.6",
    "sockjs-client": "1.1.2"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-es2015-rollup": "3.0.0",
    "cpx": "1.5.0",
    "cssmin": "0.4.3",
    "eslint": "^3.16.1",
    "http-server": "^0.9.0",
    "less": "2.7.2",
    "mkdirp": "^0.5.1",
    "mocha": "3.2.0",
    "parallelshell": "2.0.0",
    "rimraf": "2.6.1",
    "rollup": "0.41.4",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-commonjs": "7.0.0",
    "rollup-plugin-json": "2.1.0",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-plugin-replace": "1.1.1",
    "rollup-plugin-uglify": "1.0.1",
    "rollup-watch": "3.2.2",
    "watch": "1.0.2"
  }
}
