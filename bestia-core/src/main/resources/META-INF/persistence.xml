<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

<!-- TODO Ich glaube diese Datei wird gar nicht mehr benÃ¶tigt. TESTEN -->
	<persistence-unit name="Default">
		<description>My Persistence Unit</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>net.bestia.model.Account</class>
		<class>net.bestia.model.Bestia</class>
		<class>net.bestia.model.PlayerBestia</class>
		<class>net.bestia.model.Guild</class>
		<class>net.bestia.model.GuildMember</class>
		<class>net.bestia.model.Attack</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="mysql://localhost/bestia" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="root" />
			<!-- if this is true, hibernate will print (to stdout) the SQL it executes, 
				so you can check it to ensure it's not doing anything crazy -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<!-- this tell Hibernate to update the DDL when it starts, very useful 
				for development, dangerous in production -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		</properties>
	</persistence-unit>

</persistence>